<h1>Artists</h1>

<p><%= link_to 'Add a New Artist', new_artist_url %></p>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.first_name %></td>
      <td><%= artist.last_name %></td>
      <td><%= artist.email %></td>
      <td><%= artist.bio %></td>
      <td><%= link_to 'Show', artist_url(artist) %></td>
      <td><%= link_to 'Edit', edit_artist_url(artist) %></td>
      <td><%= link_to 'Destroy', artist_url(artist), method: 'delete', data: { confirm: "Do you really want to delete this artist?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

