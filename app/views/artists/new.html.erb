<h1>New Artist</h1>

<%= form_tag(artists_url, method: 'post') do %>
  <div>
    <%= label_tag :first_name %><br />
    <%= text_field_tag :first_name %>
  </div>

  <div>
    <%= label_tag :last_name %><br />
    <%= text_field_tag :last_name %>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :bio %><br />
    <%= text_field_tag :bio %>
  </div>

  <div>
    <%= submit_tag "Create Artist" %>
  </div>
<% end %>
