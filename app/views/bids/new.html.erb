<div class="page-header">
  <h1>New Bid</h1>
</div>

<%= form_tag(bids_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :idea_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :idea_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :artist_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :artist_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Bid", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
